// textures

import lib/device.a

class Texture {
	func sharp(var is_sharp) { // static
		if (is_sharp) return ?Device.send_pointer("texture", "sharp 1");
		else return ?Device.send_pointer("texture", "sharp 0");
	}
	
	var id;
	
	func construct(var bitmap, var bpp, var width, var height) {
		self.id = ?Device.send("texture", 0x63, bitmap, bpp, width, height);
		return self;
	}
	
	func destruct {
		Device.send("texture", 0x72, self.id);
	}
}
