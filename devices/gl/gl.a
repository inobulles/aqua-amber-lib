// gl functions

import lib/device.a
import lib/devices/graphics/texture.a

class Gl {
	func bind_texture(var slot, Texture->var texture) {
		Device.send "gl", 0x74, slot, texture.id;
	}
	
	func draw(var index_count, var index_pointer, var vertex_pointer, var texture_coords_pointer, var colour_pointer, var normal_pointer) {
		Device->var device = new(Device).construct("gl");
		device.send 0x64, index_count, index_pointer, vertex_pointer, texture_coords_pointer, colour_pointer, normal_pointer;
		mfree device, Device;
	}
}
